<h1> Edit the task! </h1>

<%= form_for @task do |f| %>
  <%= f.label :title, "Enter a title" %>
  <%= f.text_field :title %>

  <%= f.label :details, "Enter details" %>
  <%= f.text_field :details %>

  <%= f.label :completed, "Complete?" %>
  <%= f.check_box :completed %><br>
  <br>

  <%= f.submit %>
  <% end %>
