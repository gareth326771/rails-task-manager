<h1>My tasks</h1>

<ul>
<% @tasks.each do |task| %>
<li><%= link_to task.title, task_path(task) %></li><br>
<%= link_to task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
<br>
<% end %><br>
<br>
</ul>

<%= link_to 'Add Task', task_path(:new) %>


